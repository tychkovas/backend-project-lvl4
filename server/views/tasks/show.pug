extends ../layouts/application.pug

block header
  = task.name
  h2(align="right")
    = task.creator.name

block content
  +formFor()(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', t('views.tasks.name'), errors)(type="text")
    +textarea(task, 'description', t('views.tasks.description'))
    +input(task.status, 'name', t('views.tasks.status'),  errors)(type="text")
    +input(task.executor, 'name', t('views.tasks.executor'))(type="text")